<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vitpunerobotics.netra">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/log"
        android:label="Netra"
        android:roundIcon="@mipmap/log"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.vitpunerobotics.netra.activities.splashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.vitpunerobotics.netra.activities.Voice_Control"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.Manual"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.Face_Tracker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.Color_Detector"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.OCR_activity"
            android:label="@string/title_activity_ocr_act"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.demo"
            android:label="@string/demo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.Move_dist"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.Main3Activity"
            android:label="@string/title_activity_main3"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>